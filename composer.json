{
  "name": "suralc/pvra",
  "description": "Detects the php-version requirement of a given piece of code.",
  "keywords": ["requirement", "version", "php"],
  "minimum-stability": "stable",
  "license": "MIT",
  "bin": ["bin/pvra"],
  "autoload": {
    "psr-4": {
      "Pvra\\": "src"
    },
    "classmap": ["src"],
    "files": ["src/Console/helpers.php"]
  },
  "require": {
    "php": ">=5.6",
    "ext-tokenizer": "*",
    "symfony/console": "^3.0",
    "symfony/finder": "^3.0",
    "nikic/php-parser": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.2",
    "mockery/mockery": "~0.9"
  }
}
