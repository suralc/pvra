{
  "name": "suralc/pvra",
  "description": "Detects the php-version requirement of a given piece of code.",
  "keywords": ["requirement", "version", "php"],
  "minimum-stability": "stable",
  "license": "MIT",
  "bin": ["bin/pvra"],
  "autoload": {
    "psr-4": {
      "Pvra\\": "src"
    },
    "classmap": ["src"],
    "files": ["src/Console/helpers.php"]
  },
  "require": {
    "php": ">=5.4",
    "ext-tokenizer": "*",
    "symfony/console": "~2.5",
    "symfony/finder": "~2.5",
    "nikic/php-parser": "~1.3"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.3",
    "mockery/mockery": "~0.9"
  }
}
